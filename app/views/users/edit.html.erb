
<div class="containet">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto p-3 ">
      <h1>User info</h1>
        <%= form_with model: @user do |f| %>
        <div class="form-group mb-3">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName" , class: "form-control"%>
        </div>
        <div class="form-group mb-3">
          <label>Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file"%>
        </div>
        <div class="form-group mb-3">
          <label>Introduction</label>
           <%= f.text_area :introduction, autofocus: true, id:"inputName" , class: "form-control"%>
        </div>
        <div class="form-group mb-3">
          <%= f.submit "Update User" ,class: "btn btn-secondary text-light"%>
        </div>
        <% end %>
    </div>
  </div>
</div>

