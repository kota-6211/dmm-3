<div class="container">
  <div class="row" >
        <%= render 'users/list', user: @userss %>
     <div class="col-md-8 offset-md-1 mt-3">
       <h2>Users</h2>
       <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <% @users.each do |users| %>
        <tbody>
            <tr>
              <td><%= image_tag users.get_profile_image(100,100) %></td>
              <td><%= users.name %></td>
              <td><%= link_to "show", user_path(id: users.id)%></td>
            </tr>
        </tbody>    
        <% end %>
      </div>
   </div>
</div>