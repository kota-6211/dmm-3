<% if @book.errors.any? %>
    <div class="errors">
      <h2 class="index-errors"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
       <ul class="errors-text">
        <% @book.errors.full_messages.each do |message| %>
          <li class="index-errors-massage"><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<div class="containet">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label>title</label>
          <%= f.text_field :title, autofocus: true ,class: "form-control book_title"%>
        </div>
        <div class="form-group">
          <label>body</label>
          <%= f.text_area :body, autofocus: true ,class: "form-control book_title"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" ,class: "btn btn-success text-light"%>
        </div>
        <% end %>
    </div>
  </div>
</div>
