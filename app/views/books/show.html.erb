<%= flash[:notice] %>

<div class="container">
  <div class="row" >
  <%= render 'users/list', user: @user %>
     <div class="col-md-8 offset-md-1 mt-3" >
       <h2>Book detail</h2>
       <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <td> <%= image_tag @book.user.get_profile_image(100,100) %></br><%= link_to @book.user.name , user_path(@book.user.id) %></td>
             
              <td><%= link_to @book.title,book_path(id: @book.id)%></td>
              <td> <%= @book.body %></td>
              <% if @book.user== current_user %>
                <td><button type="button" class="btn btn-success"><%= link_to "Edit" , edit_book_path , class: "text-light" %></button></td>
                <td><button type="button" class="btn btn-danger"><%= link_to "destroy" , book_path(@book), method: :delete ,"data-confirm" =>"are you sure?",class: "delete-button text-light"%></button></td>
              <% end %>
            </tr>
          </thead>
       </table>
      </div>
   </div>
</div>