<% if @book.errors.any? %>
    <div class="errors">
      <h2 class="index-errors"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
       <ul class="errors-text">
        <% @book.errors.full_messages.each do |message| %>
          <li class="index-errors-massage"><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= flash[:notice] %>

<div class="container">
  <div class="row" >
  <%= render 'users/list', user: @user %>
     <div class="col-md-8 offset-md-1 mt-3">
         <h2>Books</h2>
       <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <% @books.each do |books| %>
          <tbody>
            <tr>
              <td><%= image_tag books.user.get_profile_image(100,100) %></td>
              <td><%= link_to books.title, book_path(id: books.id) %></td>
            </tr>
         <% end %>
       </table>
      </div>
   </div>
</div>

